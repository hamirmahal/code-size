{
  "name": "size",
  "displayName": "Size",
  "description": "Folder size tree, github.dev compatible",
  "publisher": "yurish",
  "version": "0.2.6",
  "icon": "images/cat.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/yuri0sh/code-size.git"
  },
  "keywords": [
    "size",
    "filesize",
    "file size",
    "folder size",
    "project size",
    "size explorer",
    "size tree",
    "size view"
  ],
  "browser": "./dist/web.js",
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "size.sizeTree",
          "name": "Size",
          "when": "workbenchState != empty",
          "contextualTitle": "Size Explorer",
          "icon": "$(pie-chart)"
        }
      ]
    },
    "submenus": [
      {
        "id": "sizeExplorerTreeTypeSubmenu",
        "label": "View As"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "size.enableGitignore",
          "when": "!size.gitignoreEnabled"
        },
        {
          "command": "size.disableGitignore",
          "when": "size.gitignoreEnabled"
        },
        {
          "command": "size.includePath"
        }
      ],
      "sizeExplorerTreeTypeSubmenu": [
        {
          "command": "size.modeFiles"
        },
        {
          "command": "size.modeFolders"
        },
        {
          "command": "size.modeExtensions"
        }
      ],
      "view/title": [
        {
          "command": "size.refreshTree",
          "when": "view == size.sizeTree",
          "group": "navigation@1"
        },
        {
          "command": "size.modeFiles",
          "group": "navigation@2",
          "when": "false && view == size.sizeTree && size.treeType == 'extension'"
        },
        {
          "command": "size.modeFolders",
          "group": "navigation@2",
          "when": "view == size.sizeTree && size.treeType == 'extension'"
        },
        {
          "command": "size.modeExtensions",
          "group": "navigation@2",
          "when": "view == size.sizeTree && size.treeType == 'folder'"
        },
        {
          "submenu": "sizeExplorerTreeTypeSubmenu",
          "when": "view == size.sizeTree",
          "group": "2_options@2"
        },
        {
          "command": "size.ignorePath",
          "when": "view == size.sizeTree",
          "group": "2_options@1"
        },
        {
          "command": "size.enableGitignore",
          "when": "view == size.sizeTree && !size.gitignoreEnabled",
          "group": "3_settings@1"
        },
        {
          "command": "size.disableGitignore",
          "when": "view == size.sizeTree && size.gitignoreEnabled",
          "group": "3_settings@1"
        },
        {
          "command": "size.openSettings",
          "when": "view == size.sizeTree",
          "group": "3_settings"
        }
      ],      
      "view/item/context": [
        {
          "command": "size.openFilterTextView",
          "when": "view == size.sizeTree && viewItem == ignoreRoot"
        },
        {
          "command": "size.toggleFilterMode",
          "when": "viewItem == ignoreRoot",
          "group": "inline"
        },
        {
          "command": "size.ignorePath",
          "when": "view == size.sizeTree && (!viewItem || viewItem == extRoot)",
          "group": "inline"
        },
        {
          "command": "size.includePath",
          "when": "view == size.sizeTree && (viewItem == ignoreRoot || viewItem == ignoreItem)",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "size.openFilterTextView",
        "title": "Edit filter JSON",
        "shortTitle": "Edit",
        "category": "Size"
      },
      {
        "command": "size.refreshTree",
        "title": "Refresh",
        "category": "Size",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "size.modeFiles",
        "title": "View As File List",
        "shortTitle": "Files",
        "category": "Size",
        "icon": "$(explorer-view-icon)"
      },
      {
        "command": "size.modeFolders",
        "title": "View As Folder Tree",
        "shortTitle": "Folder Tree",
        "category": "Size",
        "icon": "$(folder-opened)"
      },
      {
        "command": "size.modeExtensions",
        "title": "View As File Type Groups",
        "shortTitle": "Extension Groups",
        "category": "Size",
        "icon": "$(file-code)"
      },
      {
        "command": "size.setTreeType",
        "title": "Set View As",
        "shortTitle": "View As",
        "category": "Size",
        "icon": "$(list-tree)"
      },
      {
        "command": "size.enableGitignore",
        "title": "Enable .gitignore",
        "category": "Size"
      },
      {
        "command": "size.disableGitignore",
        "title": "Disable .gitignore",
        "category": "Size"
      },
      {
        "command": "size.openSettings",
        "title": "Settings",
        "category": "Size"
      },
      {
        "command": "size.ignorePath",
        "title": "Add filter rule",
        "icon": "$(dash)",
        "category": "Size"
      },
      {
        "command": "size.includePath",
        "title": "Remove filter rule",
        "icon": "$(close)",
        "category": "Size"
      },
      {
        "command": "size.toggleFilterMode",
        "title": "Invert filter mode",
        "category": "Size",
        "icon": "$(color-mode)"
      }
    ],
    "configuration": {
      "title": "Size",
      "properties": {
        "size.fileSizeUnits": {
          "type": "string",
          "default": "1000 (kB/MB/GB/TB)",
          "enum": [
            "1024 (KiB/MiB/GiB/TiB)",
            "1000 (kB/MB/GB/TB)"
          ],
          "description": "Switch between base-2 (Windows, ISO/IEC 80000-13) and base-10 (SI) file size units"
        },
        "size.togglableFilters": {
          "type": "boolean",
          "default": false,
          "description": "Allow toggling individual filters (messes with the UI)"
        },
        "size.foldersFirst": {
          "type": "boolean",
          "default": false,
          "description": "Give folders priority in sorting"
        },
        "size.fileSizeLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show file size before file name"
        },
        "size.folderContentCount": {
          "type": "boolean",
          "default": true,
          "description": "Show recursive file count for folders"
        },
        "size.compactFolders": {
          "type": "boolean",
          "default": true,
          "description": "Compact folders that contain only one child folder"
        },
        "size.defaultTreeType": {
          "type": "string",
          "default": "folder",
          "enum": [
            "file",
            "folder",
            "extension"
          ],
          "description": "Default view mode (View As...)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "ignore": "^5.2.4"
  }
}
