{
  "name": "size",
  "displayName": "Size",
  "description": "Project size tree, github.dev compatible",
  "publisher": "yurish",
  "version": "0.1.2",
  "icon": "images/cat.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/yuri0sh/code-size.git"
  },
  "keywords": [
    "size",
    "filesize",
    "file size",
    "folder size",
    "project size",
    "size explorer",
    "size tree",
    "size view"
  ],
  "browser": "./dist/web.js",
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "size.sizeTree",
          "name": "Size",
          "when": "workbenchState != empty",
          "contextualTitle": "Project Size",
          "icon": "$(pie-chart)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "size.modeFiles",
          "when": "!size.fileView"
        },
        {
          "command": "size.modeFiles",
          "when": "size.fileView"
        },
        {
          "command": "size.enableGitignore",
          "when": "!size.gitignoreEnabled"
        },
        {
          "command": "size.disableGitignore",
          "when": "size.gitignoreEnabled"
        }
      ],
      "view/title": [
        {
          "command": "size.refreshTree",
          "when": "view == size.sizeTree",
          "group": "navigation@1"
        },
        {
          "command": "size.modeFiles",
          "group": "navigation@2",
          "when": "view == size.sizeTree && !size.fileView"
        },
        {
          "command": "size.modeFolders",
          "group": "navigation@2",
          "when": "view == size.sizeTree && size.fileView"
        },
        {
          "command": "size.enableGitignore",
          "when": "view == size.sizeTree && !size.gitignoreEnabled"
        },
        {
          "command": "size.disableGitignore",
          "when": "view == size.sizeTree && size.gitignoreEnabled"
        },
        {
          "command": "size.openSettings",
          "when": "view == size.sizeTree"
        }
      ]
    },
    "commands": [
      {
        "command": "size.refreshTree",
        "title": "Size: Refresh",
        "shortTitle": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "size.modeFiles",
        "title": "Size: Show File List",
        "shortTitle": "Show File List",
        "icon": "$(explorer-view-icon)"
      },
      {
        "command": "size.modeFolders",
        "title": "Size: Show Folder Tree",
        "shortTitle": "Show Folder Tree",
        "icon": "$(folder-opened)"
      },
      {
        "command": "size.enableGitignore",
        "title": "Enable .gitignore"
      },
      {
        "command": "size.disableGitignore",
        "title": "Disable .gitignore"
      },
      {
        "command": "size.openSettings",
        "title": "Settings"
      }
    ],
    "configuration": {
      "title": "Size",
      "properties": {
        "size.fileSizeLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show file size before file name"
        },
        "size.folderContentCount": {
          "type": "boolean",
          "default": true,
          "description": "Show recursive file count for folders"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "ignore": "^5.2.4"
  }
}
